#!/usr/bin/env bash

set -e

# Builds 'service-mfa' docker image with the version given below. 

# Determine the build_tag and whether we need to release.
SCRIPT_FOLDER=$(cd $(dirname "$0"); pwd)
$SCRIPT_FOLDER/scripts/build_name

version=$(cat build_tag)
if [ -e release_build ]; then
  echo "This is a release build, it will update 'latest' tags."
fi

host='eu.gcr.io'

echo "---------------------------- building mfa --------------------------------"
echo $host/pryvio/service-mfa:$version
docker build -f $SCRIPT_FOLDER/service-mfa/Dockerfile -t $host/pryvio/service-mfa:$version .
docker push $host/pryvio/service-mfa:$version
